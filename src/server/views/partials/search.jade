// new row
.row
	.col-lg-11.col-md-11.col-sm-11
		.content_block
			.subnav
				ul.nav.nav-pills
					li
						a(href='#/quickGuide/') Quick Guide
					li
						a(href='#/browse/') Browse
					li.active
						a(href='#/search/') Search
					li
						a(href='') Advanced Search
					li
						a(href='') Favorites
			// end subnav
			.search_header
				.search_text
					| Search
					span.search_intro   |  Enter a search term:
				.input-group.search_term
					input.form-control(type='text', ng-model='queryString', id='searchPageBawks', ng-enter='redirectToSearch()')
					span.input-group-btn
						a.btn.btn-default(type='button', id='searchPageButton', ng-click='redirectToSearch()')
							span.glyphicon.glyphicon-search
				// /input-group
				// Split button
				.btn-group.sortby
					button.btn.btn-default(type='button') Sort by...   
					button.btn.btn-default.dropdown-toggle(type='button', data-toggle='dropdown')
						span.caret
						span.sr-only Toggle Dropdown
					ul.dropdown-menu(role='menu')
						li
							a(href='#') Resource
						li
							a(href='#') Date
						li
							a(href='#') Status
			// end search header
			.row
				// nested row
				.col-lg-3.col-md-4.col-sm-4
					.sub_block
						.orange_header_narrow Narrow your results:
						.thick_border
						.gray_header By Resource:
						table.table_filter
							tr
								td
									.input-group
										input(type='checkbox' data-ng-model='checkedLabels.SurveillanceSystem')
										| &nbsp;Surveillance System
									// /input-group
								td.result_number {{labelCounts.SurveillanceSystem}}
							tr
								td
									.input-group
										input(type='checkbox' data-ng-model='checkedLabels.Program')
										| &nbsp;Program
									// /input-group
								td.result_number {{labelCounts.Program}}
							tr
								td
									.input-group
										input(type='checkbox' data-ng-model='checkedLabels.Registry')
										| &nbsp;Registry
									// /input-group
								td.result_number {{labelCounts.Registry}}
							tr
								td
									.input-group
										input(type='checkbox' data-ng-model='checkedLabels.HealthSurvey')
										| &nbsp;Health Survey
									// /input-group
								td.result_number {{labelCounts.HealthSurvey}}
							tr
								td
									.input-group
										input(type='checkbox' data-ng-model='checkedLabels.Tool')
										| &nbsp;Tool
									// /input-group
								td.result_number {{labelCounts.Tool}}
							tr
								td
									.input-group
										input(type='checkbox' data-ng-model='checkedLabels.Dataset')
										| &nbsp;Dataset
									// /input-group
								td.result_number {{labelCounts.Dataset}}
							tr
								td
									.input-group
										input(type='checkbox' data-ng-model='checkedLabels.DataStandard')
										| &nbsp;Data Standard
									// /input-group
								td.result_number {{labelCounts.DataStandard}}
							tr
								td
									.input-group
										input(type='checkbox' data-ng-model='checkedLabels.Collaborative')
										| &nbsp;Collaborative
									// /input-group
								td.result_number {{labelCounts.Collaborative}}
							tr
								td
									.input-group
										input(type='checkbox' data-ng-model='checkedLabels.Organization')
										| &nbsp;Organization
									// /input-group
								td.result_number {{labelCounts.Organization}}
							tr
								td
									.input-group
										input(type='checkbox' data-ng-model='checkedLabels.Tag')
										| &nbsp;Tag
									// /input-group
								td.result_number {{labelCounts.Tag}}
						.gray_header.vertical_spacing By Date:
						table.table_filter
							tr
								td
									.input-group
										input(type='checkbox')
										| &nbsp;Start Date
									// /input-group
								td.result_number ##/##/##
							tr
								td
									.input-group
										input(type='checkbox')
										| &nbsp;End Date
									// /input-group
								td.result_number ##/##/##
						.divider_line
						table.table_filter
							tr
								td
									.input-group.check_filter
										input(type='checkbox' )
										| &nbsp;Newer than
									// /input-group
								td.result_number ##/##/##
							tr
								td
									.input-group.check_filter
										input(type='checkbox' )
										| &nbsp;Older than
									// /input-group
								td.result_number ##/##/##
						.divider_line
						.select_date
							a(href='')
								span.glyphicon.glyphicon-calendar
								| Select date
						.gray_header.vertical_spacing By Status:
						table.table_filter
							tr
								td
									.input-group.check_filter
										input(type='checkbox')
										| &nbsp;Active
									// /input-group
								td.result_number ##
							tr
								td
									.input-group.check_filter
										input(type='checkbox')
										| &nbsp;Archived
									// /input-group
								td.result_number ##
						.vertical_spacing_morer
					// end filter block
				// end col specs

				.col-lg-9.col-md-8.col-sm-8(ng-show='hadSearchResults')
					.sub_block(ng-show='hasSearchValue')
						img(src='img/ajax-loader.gif', alt='Content is Loading', ng-show='contentLoading')
						.span(ng-repeat="node in nodes | searchCheckFilter:checkedLabels", ng-show='!contentLoading', )
							table.search_results
								tr
									td.resource_name.search
										a(href='#/node/{{node.id}}') {{node.name}}
									td.status.search ##/##/##, Status 
									td.resource_type.search2
										span.labelbg {{node.labels | unCamelCase}}
							table.search_results2
								tr(ng-repeat="att in node.attributes")
									td(class="text-left list_margin") 
										strong {{att.key | unCamelCase}}:&nbsp; {{att.value}}	
									//- td(class="text-left")															
						//.page_controls
						//	| Page controls (for multiple pages of results) to go here
					// end sub block
				// end col specs
				.col-lg-9.col-md-8.col-sm-8(ng-show='!hadSearchResults')
					.sub_block(ng-show='hasSearchValue')
						strong No search results returned.									
						//.page_controls
						//	| Page controls (for multiple pages of results) to go here
					// end sub block
				// end col specs
			// end nested row
		// end content block
	// end col spec
	.col-lg-1.col-md-1.col-sm-1
		.hx_side2
			| Tab
		// end hx_side
	// end col spec
// end row
